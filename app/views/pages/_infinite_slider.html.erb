<div data-controller="infinite-slider" class="relative overflow-hidden w-full bg-white py-8">
  <!-- Left gradient overlay -->
  <div class="absolute inset-y-0 left-0 w-[220px] bg-gradient-to-r from-white via-white/50 to-transparent z-10"></div>
  
  <!-- Right gradient overlay -->
  <div class="absolute inset-y-0 right-0 w-[220px] bg-gradient-to-l from-white via-white/50 to-transparent z-10"></div>

  <!-- Slider container -->
  <div class="flex gap-4 animate-slide" data-infinite-slider-target="container">
    <% @slider.each do |slide| %>
      <%= tag.img src: "/slider/#{slide}", class: "filter grayscale opacity-50 hover:grayscale-0 hover:opacity-100 w-48 h-24 p-4" %>
    <% end %>
  </div>
</div>
