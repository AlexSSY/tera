<!-- Charts section -->
<section class="text-black py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <h2 class="text-3xl font-bold mb-4">Catch Your Next Trading Opportunity</h2>

    <!-- Two-column Layout -->
    <div class="grid grid-cols-3 gap-6 mb-8">

      <!-- First Block (2/3 width) -->
    <div class="col-span-2 bg-white p-6 rounded-md shadow-md" data-controller="crypto-prices" data-crypto-prices-symbol-value="<%= @second_symbol %>">
      <h3 class="text-md font-semibold mb-4">Market Insights</h3>

      <!-- Grid Table -->
      <div class="grid grid-cols-5 text-gray-400 text-sm mb-4 font-semibold pb-2">
        <div>Trading Pairs</div>
        <div class="flex justify-end">Last Traded Price</div>
        <div class="flex justify-end">24H Change</div>
        <div class="flex justify-end">Price Change</div>
        <div class="flex justify-end">Trade</div>
      </div>

      <!-- Table Rows -->
      <!-- Row 1 -->
      <% @first_symbols.each do |symbol| %>
      <div class="grid grid-cols-5 text-gray-800 items-center py-2" data-crypto-prices-target="item" data-symbol="<%= symbol %>">
        <div class="uppercase flex items-center">
          <img class="inline mr-2" width="28" src="<%= url_for Coin.find_by(tag: symbol)&.icon %>" alt="">
          <%= "#{symbol}#{@second_symbol}" %>
        </div>
        <div class="flex justify-end">-</div>
        <div class="flex justify-end">-</div>
        <div class="flex justify-end">
          -
        </div>
        <div class="flex justify-end">
          <button class="bg-blue-600 text-white text-sm px-4 py-1 rounded-md hover:bg-blue-700 transition">Trade</button>
        </div>
      </div>
      <% end %>
    </div>

    <!-- Second Block (1/3 width) -->
    <div class="bg-white p-6 rounded-md shadow-md flex flex-col" data-controller="crypto-gainers">
      <div class="">
        <h3 class="text-md font-semibold mb-4 border-b pb-4">Top Gainers</h3>
        <% @top_gainers.each do |gainer| %>
        <div class="flex justify-between py-2" data-crypto-gainers-target="item" data-symbol="<%= gainer[0].to_s + gainer[1].to_s %>">
          <div class="uppercase flex items-center">
            <img class="inline mr-2" width="28" src="<%= url_for Coin.find_by(tag: gainer[0])&.icon %>" alt="">
              <%= gainer[0].to_s + '/' + gainer[1].to_s %>
          </div>
          <div>-</div>
          <div>-</div>
        </div>
        <% end %>
      </div>
      <div class="">
        <h3 class="text-md font-semibold mb-4 border-b py-4">New Listings</h3>
        <% @new_listings.each do |listing| %>
        <div class="flex justify-between py-2" data-crypto-gainers-target="item" data-symbol="<%= listing[0].to_s + listing[1].to_s %>">
          <div class="uppercase flex items-center">
            <img class="inline mr-2" width="28" src="<%= url_for Coin.find_by(tag: listing[0])&.icon %>" alt="">
              <%= listing[0].to_s + '/' + listing[1].to_s %>
          </div>
          <div>-</div>
          <div>-</div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

    <!-- Button and Text -->
    <div class="flex items-center space-x-4">
      <a href="<%= url_for new_register_path %>" class="bg-blue-600 text-white font-semibold py-3 px-6 rounded-md hover:bg-blue-700 transition">Get Started</a>
      <p class="text-gray-800">Sign up now to create your own portfolio for free!</p>
    </div>
  </div>
</section>
