<header class="w-full bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    
    <!-- Left Part: Logo and Navigation Menu -->
    <div class="flex items-center space-x-6">
      
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <img src="/logo.svg" alt="Logo" class="w-10 h-10">
        <span class="text-2xl font-bold text-gray-800">CryptoTrade</span>
      </a>
      
      <!-- Navigation Menu -->
      <nav class="flex space-x-6">
        <a href="/" class="text-gray-800 hover:text-blue-600 font-semibold">Home</a>
        <a href="#" class="text-gray-800 hover:text-blue-600 font-semibold">Trading</a>
        <a href="#" class="text-gray-800 hover:text-blue-600 font-semibold">Market</a>
        <a href="<%= url_for coins_path %>" class="text-gray-800 hover:text-blue-600 font-semibold">Coins</a>
        <a href="#" class="text-gray-800 hover:text-blue-600 font-semibold">NFT</a>
      </nav>
      
    </div>
    
    <!-- Right Part: Search Input and User Avatar with Online Indicator -->
    <div class="flex items-center space-x-4">
      
      <!-- Search Input -->
      <div class="relative">
        <input type="text" placeholder="Search..." class="w-48 px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-600">
      </div>

      <% if user_signed_in? %>

        <div class="relative" data-controller="profile-menu">

          <!-- User Avatar with Online/Offline Indicator -->
          <div class="relative cursor-pointer" data-action="click->profile-menu#toggle">
            <img src="<%= current_user.avatar.attached? ? (url_for current_user.avatar) : '/user.png' %>" alt="User Avatar" class="w-10 h-10 rounded-full border-2 border-gray-300">
            
            <!-- Online/Offline Indicator -->
            <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></span>
          </div>

          <!-- Popup Menu -->
          <div 
            data-profile-menu-target="menu"
            class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg hidden"
          >
            <ul class="py-2">
              <!-- Profile Link -->
              <li>
                <a href="/profile" class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100">
                  <i class="fas fa-user mr-2"></i> Profile
                </a>
              </li>

              <!-- Edit Profile Link -->
              <li>
                <a href="/profile/edit" class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100">
                  <i class="fas fa-edit mr-2"></i> Edit Profile
                </a>
              </li>

              <!-- Wallet Link -->
              <li>
                <a href="/wallet" class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100">
                  <i class="fas fa-wallet mr-2"></i> Wallet
                </a>
              </li>

              <!-- Separator -->
              <li>
                <hr class="border-t border-gray-200 my-1">
              </li>

              <!-- Logout Link -->
              <li>
                <%= button_to session_path, method: :delete, class: "flex w-full items-center px-4 py-2 text-gray-700 hover:bg-gray-100" do %>
                  <i class="fas fa-sign-out-alt mr-2"></i> Logout
                <% end %>
              </li>
            </ul>
          </div>

        </div>

      <% else %>

        <%= link_to 'Login', new_session_path, class: 'text-blue-500 hover:underline' %>
        <%= link_to 'Register', new_register_path, class: 'border-2 border-green-500 text-green-500 hover:bg-green-500 hover:text-white px-4 py-2 rounded-md' %>

      <% end %>
    </div>
    
  </div>
</header>