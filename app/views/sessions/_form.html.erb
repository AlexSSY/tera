<div class="flex items-center justify-center py-20">
  <!-- Container for both Image and Form -->
  <div class="flex items-center justify-between w-full max-w-4xl bg-white p-6 rounded-lg shadow-lg">
    <!-- Image Div (Placeholder for the image) -->
    <img class="w-1/2 max-w-sm bg-gray-200 rounded-lg flex items-center justify-center" src="/login.webp">

    <!-- Login Form -->
    <div class="w-1/2 max-w-sm p-8">
      <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Login</h2>

      <%= simple_form_for(@user, url: session_path, method: :post) do |f| %>

        <div class="mb-4">
          <%= f.input :email, required: false, input_html: { placeholder: "example@mail.com" } %>
        </div>

        <div class="mb-6">
          <%= f.input :password, input_html: { type: "password", placeholder: "********" } %>
        </div>

        <div class="flex justify-between items-center">
          <%= f.button :submit, "Login" %>
          <%= link_to "Forgot your password?", "new_user_password_path", class: "text-blue-500 hover:underline text-sm" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
