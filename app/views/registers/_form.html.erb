<div class="flex items-center justify-center my-20">
  <!-- Container for both Image and Form -->
  <div class="flex items-center w-full bg-white rounded-lg shadow-lg">
    <!-- Image Div (Placeholder for the image) -->
    <div class="w-[200px] h-[500px] relative overflow-hidden max-w-sm bg-[url('/login.webp')]">
    </div>

    <!-- Login Form -->
    <div class="w-1/2 max-w-sm p-8">
      <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Register</h2>

      <%= simple_form_for(@user, url: register_path, method: :post) do |f| %>

        <div class="mb-4">
          <%= f.input :email, required: false, input_html: { placeholder: "example@mail.com" } %>
        </div>

        <div class="mb-6">
          <%= f.input :password, input_html: { type: "password", placeholder: "********" } %>
        </div>

        <div class="mb-6">
          <%= f.input :password_confirmation, input_html: { type: "password", placeholder: "********" } %>
        </div>

        <div class="flex justify-between items-center">
          <%= f.button :submit, "Register" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
